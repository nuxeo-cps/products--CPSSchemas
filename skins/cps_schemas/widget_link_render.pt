<tal:block define="mode options/mode;
                   href_id here/getHtmlWidgetId;
                   content_id string:${href_id}_content;
                   title_id string:${href_id}_title;
                   href options/href;
                   content options/content;
                   title options/title;
                  ">
<tal:block condition="python: mode == 'view'">
<a href=""
  tal:attributes="href href;title title|nothing;
    target python: test(href.startswith('http'), 'CPS LINK', nothing);">
  <b tal:content="python: test(content, content, href)" />
</a>
<tal:block condition="title">
  <br><span tal:content="title" />
</tal:block>
<tal:block condition="content">
  <br><a href=""
         tal:attributes="href href;title title|nothing;
          target python: test(href.startswith('http'), 'CPS LINK', nothing);"
         tal:content="href" />
</tal:block>
</tal:block>
<tal:block condition="python: mode == 'edit'">
  <table width="100%" border="0">
    <tr>
      <td i18n:translate="cpsschemas_label_link_href">url</td>
      <td><input type="text" size="72"
            tal:attributes="name href_id;value href" /></td>
    </tr>
    <tr>
      <td i18n:translate="cpsschemas_label_link_content">name</td>
      <td><input type="text" size="72"
            tal:attributes="name content_id;value content" /></td>
    </tr>
    <tr>
      <td i18n:translate="cpsschemas_label_link_title">description</td>
      <td><textarea cols="40" rows="5"
            tal:attributes="name title_id;"
            tal:content="title" /></td>
    </tr>
  </table>
</tal:block>
</tal:block>
