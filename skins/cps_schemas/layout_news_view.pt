<div class="document"
     tal:define="layout options/layout;
                 ds options/datastructure;
                 dm options/datamodel;">
  <div tal:repeat="row layout/rows">
    <div tal:repeat="cell row" tal:attributes="colspan cell/ncols">
      <tal:block define="widget cell/widget">
        <div tal:replace="structure python:widget.render('view', ds, dm)" />
      </tal:block>
    </div>
  </div>
</div>
