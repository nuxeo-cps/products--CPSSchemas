<tal:block define="layout options/layout;
                   widgets options/layout/widgets;
                   ds options/datastructure;
                   dm options/datamodel;
                   fixed_layouts python:['title'];
                  ">

<!-- Part that we can call by id -->

<table width="100%" cellpadding="2" cellspacing="2" border="1">
  <tr>
   <td width="20%">
      <strong>
        <span tal:replace="python:widgets['title'].title" />
      </strong>
   </td>
   <td>
     <div tal:replace="structure python:widgets['title'].render('view', ds, dm)" />
   </td>
  </tr>
</table>


<!-- Flex part for instance here -->

<table width="100%" cellpadding="2" cellspacing="2" border="0">
  <tr tal:repeat="row layout/rows">
    <td tal:repeat="cell row" tal:attributes="colspan cell/ncols">
      <tal:block define="widget cell/widget">
        <tal:block condition="python:widget.title and widget.id[3:] not in fixed_layouts ">
          <strong tal:content="widget/title">label</strong>:
          <div tal:replace="structure python:widget.render('view', ds, dm)" />
      </tal:block>
      </tal:block>
    </td>
  </tr>
</table>

</tal:block>
