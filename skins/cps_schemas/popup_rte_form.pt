<metal:html tal:define="emptybody python:1;
                        input_id request/input_id;
                        value request/value|string:;
                        label_edit request/label_edit|string:;
                        rte_value request/rte_value|nothing;">
<metal:body use-macro="here/main_template/macros/master">
<metal:headslot fill-slot="head_slot" tal:condition="rte_value">
 <script type="text/javascript"
  tal:define="js_rte_value python:here.encodeJsString(rte_value)"
  tal:content='structure string:
  <!--
      var dest;
      dest = opener.document.getElementById("${input_id}");
      dest.value = "${js_rte_value}";
      window.close();
  -->' />
</metal:headslot>
<metal:main fill-slot="body">
<div style="margin: 1em;">
<div class="document">
<form action="" method="get" tal:attributes="action string:${here_url}/popup_rte_form">
<div class="row">
 <h3 tal:content="label_edit" i18n:translate="" />
 <div class="field">
  <input type="hidden" name="input_id" tal:attributes="value input_id">

  <tal:block replace="structure python:here.Epoz(name='rte_value', data=value,
    style='width:100%; height: 65%; border:1px solid #A0A0A0; border-style:solid;',
    button='background-color:#EFEFEF; border: 1px solid #A0A0A0; cursor:
    pointer; margin-right: 1px;margin-bottom:1px;')" />
 </div>
</div>
  <input type="button" value="button_cancel" class="context"
    onClick="window.close()" i18n:attributes="value">
  <input type="submit" value="button_change" class="standalone"
    i18n:attributes="value">
</form>
</div>
</div>
</metal:main>
</metal:body>
</metal:html>
