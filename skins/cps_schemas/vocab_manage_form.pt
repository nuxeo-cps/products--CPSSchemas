<metal:body use-macro="here/main_template/macros/master">
<metal:main fill-slot="main"
            tal:define="vocabularies here/portal_vocabularies/objectValues">
<h1 i18n:translate="">cpsschemas_vocabulary_manage</h1>

<h2 i18n:translate="">cpsschemas_vocabulary_available</h2>
<form action="vocab_edit_form" method="get"
      tal:attributes="action string:${base_url}vocab_edit_form">
  <table border="0">
    <tr>
      <th i18n:translate="cpsschemas_vocabulary_id">Id:</th>
      <td>
        <select name="voc_id">
          <option value="" selected="selected"></option>
          <option tal:repeat="voc vocabularies"
                  tal:attributes="value voc/getId"
                  tal:content="voc/title_or_id">
            Vocabulary
          </option>
        </select>
      </td>
    </tr>
    <tr>
      <td>
        <input type="submit" value="button_edit" i18n:attributes="value">
      </td>
    </tr>
  </table>
</form>

<br>

<h2 i18n:translate="">cpsschemas_vocabulary_add</h2>
<form action="vocab_addvoc" method="get"
      tal:attributes="action string:${base_url}vocab_addvoc">
  <table border="0">
    <tr>
      <th i18n:translate="cpsschemas_vocabulary_id">Id:</th>
      <td><input type="text" name="new_vocid" size="25"></td>
    </tr>
    <tr>
      <td>
        <input type="submit" value="button_add" i18n:attributes="value">
      </td>
    </tr>
  </table>
</form>

<br>

<h2 i18n:translate="">cpsschemas_vocabulary_delete</h2>
<form action="vocab_delvoc" method="get"
      tal:attributes="action string:${base_url}vocab_delvoc"
      tal:condition="vocabularies">
  <table border="0">
    <tr>
      <th i18n:translate="cpsschemas_vocabulary_id">Id:</th>
      <td>
        <select name="del_vocid">
          <option value="" selected="selected"></option>
          <option tal:repeat="voc vocabularies"
                  tal:attributes="value voc/getId"
                  tal:content="voc/title_or_id">
            Vocabulary
          </option>
        </select>
      </td>
    </tr>
    <tr>
      <td>
        <input type="submit" value="button_delete" i18n:attributes="value">
      </td>
  </table>
</form>

</metal:main>
</metal:body>
