<?xml version="1.0"?>
<layout xmlns:tal="http://xml.zope.org/namespaces/tal">
  <widget id="WIDGET_ID" type="TYPE"
          tal:repeat="info here/listWidgetInfos"
          tal:attributes="id info/id;
                          type info/type;
                          ">
    <property tal:replace="structure info/propsXML"/>
  </widget>
  <table tal:define="layoutdef here/getLayoutDefinition">
    <row tal:repeat="row layoutdef/rows">
      <cell id="WIDGET_ID" ncols="NCOLS"
            tal:attributes="id cell/widget_id;
                            ncols python:cell['ncols'] != 1 and cell['ncols'] or nothing;
                           "
            tal:repeat="cell row"/>
    </row>
  </table>
  <property tal:replace="structure here/listLayoutPropsXML"/>
</layout>
